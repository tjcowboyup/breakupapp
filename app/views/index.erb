                                <input type="email" class="form-control" placeholder="Recipient Email Address" name="recipient_email" required data-validation-required-message="Please enter your recipients email address.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>Recipient Phone Number</label>
                                <input type="tel" class="form-control" placeholder="Phone Number" name="recipient_phone">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>Signed By</label>
                                <input type="text" class="form-control" placeholder="Signed By" name="signed_by" required data-validation-required-message="Please enter your signature.">
                                <p class="help-block text-danger"></p> 
                            </div>
                        </div>
                        <br>
                        <div id="success"></div>
                        <div class="row">
                            <div class="form-group col-xs-12">
                              <label><input type="checkbox" name="checkbox"> Make it spicy!</label>
                              <div class="submit_btn">
                                <button type="submit" class="btn btn-success btn-lg">Send</button>
                              </div>
                            </div>
                        </div>
                    </form>
